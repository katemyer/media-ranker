<h2>User Summary: <%= link_to @user.username, user_path(@user.id), method: :get %></h2>
<p>Joined site <%= @user.created_at %></p>

<section class="user-votes__container">
  <h3 class="user-votes__header">Votes</h3>
  <table class="table">
    <thead>
      <tr>
        <th>Media Title</th>
        <th>Created By</th>
        <th>Published</th>
        <th>Category</th>
        <th>Voted On</th>
      </tr>
    </thead>
    <tbody>
    <% @user_votes.each do |vote|  %>
      <tr>
        <td><%= vote.work.title %></td>
        <td><%= vote.work.creator %></td>
        <td><%= vote.work.publication_year %></td>
        <td><%= vote.work.category %></td>
        <td><%= vote.created_at %></td>
      </tr>
    <% end %>
    </tbody>
  </table>
</section>

<%= link_to "See all Users", users_path, method: :get, class:"btn btn-secondary" %>
<%= link_to "Back to Media List", root_path, method: :get, class:"btn btn-primary" %>